<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2APP01.Views.DatosPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="0" CornerRadius="0">
                <Label Text="Mi segundo ejercicio con Xamari" HorizontalTextAlignment="Center" Padding="0,0,0,30" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Ejercicio 1.2" FontSize="Title" Padding="30,10,30,10"/>
            <Label Text="Envio de datos" FontSize="16" Padding="30,0,30,0"/>

            <Entry x:Name="txtnombre" Placeholder="Ingrese su nombre" Keyboard="Text" Margin="30,10,30,20"/>
            <Entry x:Name="txtapellido" Placeholder="Ingrese su apellido" Keyboard="Text" Margin="30,0,30,20"/>
            <Entry x:Name="txtedad" Placeholder="Ingrese su edad" Keyboard="Numeric" Margin="30,0,30,20"/>
            <Entry x:Name="txtcorreo" Placeholder="Ingrese su correo electronico" Keyboard="Email" Margin="30,0,30,30"/>

            <Button Text="Enviar datos" x:Name="btndatos" Clicked="btndatos_Clicked" Margin="0,20,0,10"  HorizontalOptions="Center" Background="MediumPurple" TextColor="White" WidthRequest="200" />
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>